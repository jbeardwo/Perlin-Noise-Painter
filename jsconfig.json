{
  "compilerOptions": {
    "target": "ES6", // Or a higher ES version like "ES2020" if needed
    "moduleResolution": "node", // Common for resolving modules
    "allowJs": true, // Important to include JavaScript files
  },
  "include": [
    "**/*.js", // Includes all JS files recursively
    "libraries/**/*.js" // Specifically includes JS files in the libraries folder and its subdirectories
  ],
  "exclude": [
    "node_modules", // Exclude common dependency folders if applicable
    ".git"
  ]
}